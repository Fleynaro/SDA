{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "electron (js)",
            "sourceMaps": true,
            "continueOnAttach": true
        },
        {
            "type": "cppvsdbg",
            "request": "attach",
            "name": "electron (cpp)",
            "processId": "${input:readElectronPID}",
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "electron (render)",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "timeout": 15000
        },
    ],
    "compounds": [
        {
            "name": "electron (all)",
            "configurations": [
                "electron (js)",
                "electron (cpp)",
                "electron (render)"
            ],
            "stopAll": true,
            "preLaunchTask": "Run app"
        }
    ],
    "inputs": [
        {
            "id": "readElectronPID",
            "type": "command",
            // "Tasks Shell Input" extension required
            "command": "shellCommand.execute",
            "args": {
                "command": "powershell -Command \"(Get-CimInstance Win32_Process -Filter \\\"Name = 'electron.exe' AND CommandLine like '%localhost:9229%'\\\").ProcessId\"",
                //"command": "wmic process where \"commandLine like '%javascript%packages%electron%index.js'\" get processid",
                "useFirstResult": true,
            }
        }
    ]
}