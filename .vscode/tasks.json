{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build the active target",
            "type": "cmake",
            "command": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "Run tests",
            "group": "test",
            "type": "shell",
            "command": "ctest -VV -j10 -C Debug -T test",
            "dependsOn": [
                "Build the active target"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "GTEST_COLOR": "1"
                }
            }
        },

        {
            "label": "Compile app",
            "type": "shell",
            "isBackground": true,
            "command": "npm run compile",
            "options": {
                "cwd": "${workspaceFolder}/javascript"
            },
        },

        {
            "label": "Run app",
            "type": "shell",
            "isBackground": true,
            // "dependsOn": [
            //     "Compile app"
            // ],
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/javascript/packages/sda-electron"
            },

            "problemMatcher": [
                {
                  "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "message": 3
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                  }
                }
            ]
        },
    ]
}